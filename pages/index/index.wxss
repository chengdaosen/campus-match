.banner {
  width: 100%;
  height: 400rpx;
  background-color: rgb(245,245,245);
  padding-bottom: 30rpx;
  padding-top:30rpx
}

.banner swiper {
  height: 100%;
  width: 100%;
}

.banner image {
  width: 100%;
  height: 350rpx;
}
 .writeCommentWrap {
  position: relative;
  height: 48rpx;
  line-height: 48rpx;
  background: #f2f2f2;
  padding:0 26rpx;
  font-size: 22rpx;
}

 .writeCommentWrap .comment {
  color: #a1a8b3;
}

.writeCommentWrap .write {
  color: #507da7;
  float: right;
  font-size: 22rpx;
}
.icon_arrow {
  height: 12rpx;
  width: 12rpx;
  display: inline-block;
  vertical-align: top;
  margin:16rpx 0 0 8rpx;
  border-right: 1px solid #507da7;
  border-bottom: 1px solid #507da7;
  transform: rotateZ(45deg);
}