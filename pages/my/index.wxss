#page-users-index #section-user-card .btn-edit {
  position: absolute;
  z-index: 9;
  top: 30rpx;
  right: 30rpx;
}

#page-users-index #section-user-card .btn-edit .icon {
  font-size: 14px;
}

#page-users-index #section-user-card .UCenter-bg {
  background-image: url(https://raw.githubusercontent.com/HeyCommunity/HeyCommunity-wxapp/dev-master/assets/images/users/default-cover.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

#page-users-index #section-user-card .UCenter-bg .avatar {
  background-color: #dddddd;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}

#page-users-index #section-user-card .UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

#page-users-index .cu-list .cu-item {
  text-align: left;
  width: 100%;
  font-weight: normal;
  font-size: 30rpx;
  height: 46rpx;
  line-height: 1.6em;
  border-radius: unset;
}

#page-users-index .cu-list .cu-item:after {
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  height: 100%;
  transform: scale(1);
}

#page-users-index .cu-list .cu-item:last-child:after {
  border-bottom: none;
}
